<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/c1</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--EditText hint color-->
        <item name="android:textColorHint">@color/Silver</item>
        <!-- TextInputLayout text color-->
        <item name="colorControlActivated">@color/MetallicGold</item>
        <!-- EditText line color when EditText on-focus-->
        <item name="colorControlHighlight">#C0C0C0</item>
        <!-- EditText line color when EditText  in un-focus-->
        <item name="colorControlNormal">@color/MetallicGold</item>
        <item name="android:colorForeground">@color/Silver</item>
        <item name="android:textColorSecondary">@color/Silver</item>

    </style>

    <style name="UserRegistration" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="colorPrimary">@color/c3</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>


        <!--EditText hint color-->
        <item name="android:textColorHint">@color/Silver</item>
        <!-- TextInputLayout text color-->
        <item name="colorControlActivated">@color/colorAccent</item>
        <!-- EditText line color when EditText on-focus-->
        <item name="colorControlHighlight">#C0C0C0</item>
        <!-- EditText line color when EditText  in un-focus-->
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="android:colorForeground">@color/c3</item>
        <item name="android:textColorSecondary">@color/c3</item>
    </style>

</resources>